/* common/tpls/listvideo/listvideo.wxss */

.listvideo {
  width: 100%;
  height: auto;
  flex-direction: column;
  flex-wrap: wrap;
  font-size: 30rpx;
  /* background: greenyellow; */
}

.listvideo>view {
  padding: 2%;
  /* width: 98%; */
  height: 100rpx;
  border-bottom: 1px solid #e0e0e0;
}

.listvideo>image {
  width: 100%;
  height: 200rpx;
}

.listvideo>view>image {
  flex: 0 0 200rpx;
  width: 200rpx;
  height: 100%;
}

.listvideo>view>view:nth-child(2) {
  /* flex: auto;
  display: flex;
  align-items: center; */
  padding-left: 20rpx;
  position: relative;
}

.listvideo>view>view:nth-child(2)>view {
  position: relative;
  width: 100%;
  font-size: 32rpx;
}

.listvideo>view>view:nth-child(2)>view:nth-child(2) {
  color: #5e5e5e;
  font-size: 30rpx;
}

.listvideo>view>view:nth-child(3) {
  flex: 0 0 80rpx;
  /* display: flex; */
  display: none;
  padding-left: 20rpx;
  align-items: center;
}

.listvideo>view>view:nth-child(3)>image {
  width: 40rpx;
  height: 40rpx;
}
